<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui">
	<ribbon>
		<tabs>
			<tab idMso="TabPageLayoutWord">
				<group id="figuresAndTables" label="Figures and Tables" insertAfterMso="GroupArrange">
					<button id="Figure" label="New Figure" size="normal" imageMso="DiagramShapeInsertClassic" onAction="FiguresAndTables.ButtonPressed" />
					<button id="CopyFormat" label="Copy Layout" size="normal" imageMso="Copy" onAction="FiguresAndTables.ButtonPressed" />
					<button id="Reposition" label="Reposition" size="normal" imageMso="PicturePositionGallery" onAction="FiguresAndTables.ButtonPressed" />
					<button id="Table" label="New Table" size="normal" imageMso="AdpDiagramAddTable" onAction="FiguresAndTables.ButtonPressed" />
					<button id="PasteFormat" label="Paste Layout" size="normal" imageMso="Paste" onAction="FiguresAndTables.ButtonPressed" />
					<button id="RelayoutDocument" label="Relayout Document" size="normal" imageMso="PositionAnchoringGallery" onAction="FiguresAndTables.ButtonPressed" />
				</group>
			</tab>
		</tabs>
	</ribbon>
</customUI>
